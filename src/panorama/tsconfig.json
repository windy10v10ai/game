{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "types": ["@moddota/panorama-types"],
    "moduleResolution": "node",
    "strict": true,
    "preserveSymlinks": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "esModuleInterop": true, //增加刷新次数refresh-tier-config.json
    "paths": {
      "@utils/*": ["utils/*"]
    }
  },
  "include": [".", "../common/**/*.ts"]
}
