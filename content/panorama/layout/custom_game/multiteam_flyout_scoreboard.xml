<root>
    <styles>
		<include src="s2r://panorama/styles/dotastyles.vcss_c" />
		<include src="s2r://panorama/styles/custom_game/shared_scoreboard_styles.vcss_c" />
        <include src="s2r://panorama/styles/custom_game/multiteam_flyout_scoreboard.vcss_c" />
    </styles>

    <scripts>
		<include src="file://{resources}/scripts/custom_game/long.js" />
		<include src="file://{resources}/scripts/custom_game/utils.js" />
        <include src="s2r://panorama/scripts/custom_game/shared_scoreboard_updater.vjs_c" />
        <include src="s2r://panorama/scripts/custom_game/multiteam_flyout_scoreboard.vjs_c" />
    </scripts>

  <Panel hittest="false" class="FlyoutScoreboardRoot">
		<Panel id="TeamsContainer">
			<Panel id="RadiantHeader" class="Legend">
					<Panel class="LegendPanel ScoreCol_TeamInfoAndHero FlowRightPanel">
						<Label id="RadiantLabel" class="TeamLabel" text="#DOTA_GoodGuysShort"/>
						<Label id="TeamScoreSmall" class="TeamScoreSmall" text="999"/>
						<Panel id="OptionValue" class="FlowDownPanel">
							<Label id="GoldXpMultiplier" class="GameOptionValue" text="#player_multiplier" />
							<Label id="TowerPower" class="GameOptionValue" text="#tower_power" />
						</Panel>
					</Panel>
				<Label class="LegendPanel ScoreCol_Kills" text="#custom_end_screen_legend_kills" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_kills_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()"/>
				<Label class="LegendPanel ScoreCol_Deaths" text="#custom_end_screen_legend_deaths" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_deaths_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()"/>
				<Label class="LegendPanel ScoreCol_Assists" text="#custom_end_screen_legend_assists" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_assists_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()"/>
				<Label class="LegendPanel ScoreCol_Buttons" />
			</Panel>
			<Panel hittest="false" id="_dynamic_team_2" class="FlyoutTeam">
				<Panel class="FlyoutTeamData">
					<Panel class="TeamInfo ScoreCol_TeamInfo">
						<Panel id="TeamColor_GradentFromTransparentLeft" />
						<Panel id="TeamLogo" />
					</Panel>
					<Panel id="PlayersContainer" />
				</Panel>
			</Panel>
			<Panel id="DireHeader" class="Legend">
					<Panel class="LegendPanel ScoreCol_TeamInfoAndHero FlowRightPanel">
						<Label id="DireLabel" class="TeamLabel" text="#DOTA_BadGuysShort"/>
						<Label id="TeamScoreSmall" class="TeamScoreSmall" text="999"/>
						<Panel id="OptionValue" class="FlowDownPanel">
							<Label id="GoldXpMultiplier" class="GameOptionValue" text="#bot_multiplier" />
							<Label id="TowerPower" class="GameOptionValue" text="#tower_endure" />
						</Panel>
					</Panel>
				<Label class="LegendPanel ScoreCol_Kills" text="#custom_end_screen_legend_kills" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_kills_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()"/>
				<Label class="LegendPanel ScoreCol_Deaths" text="#custom_end_screen_legend_deaths" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_deaths_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()"/>
				<Label class="LegendPanel ScoreCol_Assists" text="#custom_end_screen_legend_assists" onmouseover="UIShowTextTooltipStyled( #dota_page_match_details_legend_assists_tooltip, ShortTextTooltip )" onmouseout="UIHideTextTooltip()"/>
				<Label class="LegendPanel ScoreCol_Buttons" />
			</Panel>
			<Panel hittest="false" id="_dynamic_team_3" class="FlyoutTeam">
				<Panel class="FlyoutTeamData">
					<Panel class="TeamInfo ScoreCol_TeamInfo">
						<Panel id="TeamColor_GradentFromTransparentLeft" />
						<Panel id="TeamLogo" />
					</Panel>
					<Panel id="PlayersContainer" />
				</Panel>
			</Panel>
		</Panel>
  </Panel>
</root>


